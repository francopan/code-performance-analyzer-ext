{
  "name": "code-performance-analyzer",
  "displayName": "Code Performance Analyzer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "extension.analyzeSelectedCodeAST",
        "title": "Analyze Selected Code (AST)"
      },
      {
        "command": "extension.analyzeSelectedCodeLLM",
        "title": "Analyze Selected Code (LLM)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.analyzeSelectedCodeAST",
          "when": "editorTextFocus && editorLangId == 'c'",
          "group": "navigation"
        },
        {
          "command": "extension.analyzeSelectedCodeLLM",
          "when": "editorTextFocus && editorLangId == 'c'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "LLM Analyzer Settings",
      "properties": {
          "llmAnalyzer.apiUrl": {
              "type": "string",
              "default": "http://127.0.0.1:11434/api/generate",
              "description": "The URL for the Ollama API."
          },
          "llmAnalyzer.model": {
              "type": "string",
              "default": "mistral",
              "description": "The model name to use with the Ollama API."
          }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copyTemplates",
    "copyTemplates": "copyfiles -u 1 src/templates/**/* out/templates",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.16.5",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "axios": "^1.7.5",
    "ejs": "^3.1.10"
  }
}
